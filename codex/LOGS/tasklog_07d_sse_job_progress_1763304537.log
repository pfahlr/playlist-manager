diff --git a/apps/api/src/routes/__tests__/jobs.events.test.ts b/apps/api/src/routes/__tests__/jobs.events.test.ts
new file mode 100644
index 0000000000000000000000000000000000000000..caa1f4acebd23e7949dc3f8d38f322c9cad9d172
--- /dev/null
+++ b/apps/api/src/routes/__tests__/jobs.events.test.ts
@@ -0,0 +1,139 @@
+import fastify from 'fastify';
+import { afterEach, beforeEach, describe, expect, it, vi } from 'vitest';
+
+import errorsPlugin from '../../plugins/errors';
+import jobEvents from '../jobs.events';
+
+vi.mock('@app/interop/src/jobs/progress', async () => {
+  const { EventEmitter } = await import('node:events');
+  const emitter = new EventEmitter();
+
+  return {
+    subscribeToJobProgress(jobId: number, listener: (event: any) => void) {
+      const channel = String(jobId);
+      emitter.on(channel, listener);
+      return () => emitter.off(channel, listener);
+    },
+    publishJobProgress(update: any) {
+      const channel = String(update.job_id ?? update.jobId);
+      emitter.emit(channel, { type: 'progress', update: { ...update, job_id: update.job_id ?? update.jobId } });
+    },
+    publishJobCompletion(update: any) {
+      const channel = String(update.job_id ?? update.jobId);
+      emitter.emit(channel, { type: 'complete', update: { ...update, job_id: update.job_id ?? update.jobId } });
+    },
+    resetJobProgressBus() {
+      emitter.removeAllListeners();
+    },
+  };
+});
+
+import { publishJobCompletion, publishJobProgress, resetJobProgressBus } from '@app/interop/src/jobs/progress';
+
+describe('GET /jobs/:id/events', () => {
+  async function buildApp() {
+    const app = fastify({ logger: false });
+    await app.register(errorsPlugin);
+    await app.register(jobEvents);
+    await app.ready();
+    return app;
+  }
+
+  beforeEach(() => {
+    resetJobProgressBus();
+  });
+
+  afterEach(async (ctx) => {
+    const app = (ctx as any).app;
+    if (app) {
+      await app.close();
+    }
+    resetJobProgressBus();
+    vi.useRealTimers();
+  });
+
+  it('streams job progress updates through SSE', async (ctx) => {
+    vi.useRealTimers();
+    const app = await buildApp();
+    (ctx as any).app = app;
+
+    const responsePromise = app.inject({
+      method: 'GET',
+      url: '/jobs/7001/events',
+    });
+
+    await Promise.resolve();
+
+    publishJobProgress({ job_id: 7001, percent: 12, status: 'running', message: 'queued' });
+    publishJobProgress({ job_id: 1234, percent: 90, status: 'running' }); // ignored
+    publishJobProgress({ job_id: 7001, percent: 66, status: 'running', message: 'copying tracks' });
+    publishJobCompletion({ job_id: 7001, status: 'succeeded', percent: 100 });
+
+    const response = await responsePromise;
+    const events = parseSse(response.body);
+
+    expect(response.statusCode).toBe(200);
+    expect(response.headers['content-type']).toContain('text/event-stream');
+    expect(events).toEqual([
+      {
+        event: 'progress',
+        data: { job_id: 7001, percent: 12, status: 'running', message: 'queued' },
+      },
+      {
+        event: 'progress',
+        data: { job_id: 7001, percent: 66, status: 'running', message: 'copying tracks' },
+      },
+      {
+        event: 'complete',
+        data: { job_id: 7001, status: 'succeeded', percent: 100 },
+      },
+    ]);
+  });
+
+  it('closes the stream when the job fails', async (ctx) => {
+    const app = await buildApp();
+    (ctx as any).app = app;
+
+    const responsePromise = app.inject({
+      method: 'GET',
+      url: '/jobs/8112/events',
+    });
+
+    await Promise.resolve();
+
+    publishJobProgress({ job_id: 8112, percent: 10, status: 'running' });
+    publishJobCompletion({ job_id: 8112, status: 'failed', message: 'Rate limited' });
+
+    const response = await responsePromise;
+    const events = parseSse(response.body);
+
+    expect(events).toEqual([
+      {
+        event: 'progress',
+        data: { job_id: 8112, percent: 10, status: 'running' },
+      },
+      {
+        event: 'complete',
+        data: { job_id: 8112, status: 'failed', message: 'Rate limited' },
+      },
+    ]);
+  });
+});
+
+function parseSse(body: string) {
+  return body
+    .trim()
+    .split(/\n\n+/)
+    .filter(Boolean)
+    .map((chunk) => {
+      const lines = chunk.split('\n');
+      const eventLine = lines.find((line) => line.startsWith('event:')) ?? '';
+      const dataLine = lines.find((line) => line.startsWith('data:')) ?? '';
+      const event = eventLine.replace('event:', '').trim();
+      const json = dataLine.replace('data:', '').trim();
+      return {
+        event,
+        data: json ? JSON.parse(json) : null,
+      };
+    });
+}
