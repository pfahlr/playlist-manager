+    resetJobProgressBus();
+    publishJobCompletion({ job_id: 501, status: 'failed' });
+
+    expect(received).toEqual([
+      { type: 'progress', update: { job_id: 501, status: 'running', percent: 5 } },
+    ]);
+  });
