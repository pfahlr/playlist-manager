# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================

# Project name prefix for containers and volumes (allows multiple instances)
# Leave commented to use default "plmgr"
# COMPOSE_PROJECT_NAME=plmgr

# PostgreSQL port (change to run multiple dev instances)
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=playlistmgr

# Redis port (change to run multiple dev instances)
# REDIS_PORT=6379

# MinIO ports (change to run multiple dev instances)
# MINIO_API_PORT=9000
# MINIO_CONSOLE_PORT=9001
# MINIO_ROOT_USER=minio
# MINIO_ROOT_PASSWORD=minio12345


# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Postgres (Prisma reads from DATABASE_URL)
# Update port if you changed DB_PORT above
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/playlistmgr?schema=public"

# Shadow DB for Prisma Migrate (recommended)
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tmm_shadow?schema=public"

# libsodium sealed secret (base64 32 byte seed)
MASTER_KEY="replace-with-base64-secret"

# Provider feature flags
PROVIDERS_SPOTIFY_ENABLED="true"
PROVIDERS_DEEZER_ENABLED="false"
PROVIDERS_TIDAL_ENABLED="false"
PROVIDERS_YOUTUBE_ENABLED="false"
